<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:baselineAligned="true">
        <EditText android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/queryEditText" android:hint="@string/search_hint" android:inputType="text" android:imeOptions="actionSearch" android:text=""></EditText>
        <ImageButton android:id="@+id/searchButton" android:src="@android:drawable/ic_search_category_default" android:layout_height="fill_parent" android:layout_width="wrap_content"></ImageButton>
    </LinearLayout>
    <ListView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/resultListView"></ListView>
</LinearLayout>
